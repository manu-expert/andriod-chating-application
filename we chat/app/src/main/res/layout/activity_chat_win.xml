<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatback"
    tools:context=".ChatWin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll1"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimg"
            android:layout_width="136dp"
            android:layout_height="102dp"
            android:src="@drawable/camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.186" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receiverName"
            android:text="Abu Huraira"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_19sdp"
            android:layout_margin="@dimen/_13sdp">

        </TextView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/msgAdapter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_502sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_below="@+id/ll1"
        android:padding="@dimen/_13sdp"

        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2.6dp"
        android:layout_marginTop="2.6dp"
        android:layout_marginBottom="2.6dp"
        android:layout_marginEnd="2.6dp">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/white"
            app:cardCornerRadius="32.5dp"
            android:layout_marginStart="6.5dp"
            android:layout_marginEnd="9.1dp"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/textmsg"
                android:layout_width="@dimen/_338sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="          Type Message..."
                android:padding="@dimen/_13sdp">

            </EditText>




        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/sendbtnn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/white"
            app:cardCornerRadius="32.5dp"
            android:layout_marginStart="6.5dp"
            android:layout_marginEnd="6.5dp"
            android:layout_weight="1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"  android:layout_height="@dimen/_35sdp" android:src="@drawable/sendbut"
                android:layout_gravity="center"      />
        </androidx.cardview.widget.CardView>







    </LinearLayout>

</RelativeLayout>